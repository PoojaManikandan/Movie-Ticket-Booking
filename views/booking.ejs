<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/bookingCss.css">
    <title>BookYourShow</title>

</head>
<body>
    <div class="container myContainer">
        <div class="row row-cols-auto">
            <% if(tickets.length != 0){ %>
            <%var i=1 %>
            <%tickets.forEach(function (row) { %>
            <%if(row.screen == 2){ %>
            <% if(row.isBooked== false){%>
                <div id="<%row.seatNumber%>" onClick="changeColor()" class="col myCol skyblue"><%=row.seatNumber%></div>
        <% } else{ %>
            <div class="col myCol red"><%=i%></div>
        <% }}i++;})}%>

        </div>
      </div>
      <br>
      <div>
          <form action="/updateSeat" method="POST">
              <input type="number" name="seat1" id="seat1">
              <input type="number" name="seat2" id="seat2">
              <input type="number" name="seat3" id="seat3">
              <input type="number" name="seat4" id="seat4">
          </form>
      </div>

</body>
</html>